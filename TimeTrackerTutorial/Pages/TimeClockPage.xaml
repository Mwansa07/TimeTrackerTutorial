<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeTrackerTutorial.Pages.TimeClockPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout BackgroundColor="LightBlue">
                <Label Text="{Binding RunningTotal}" />
                <Label Text="{Binding CurrentStartTime, StringFormat='You clocked in at {0}'}" />
                <Button Text="{Binding ClockInButtonText}" />
                <StackLayout Orientation="Horizontal">
                    <Label Text="Start" HorizontalOptions="FillAndExpand" />
                    <Label Text="End" HorizontalOptions="FillAndExpand" />
                    <Label Text="Total" HorizontalOptions="FillAndExpand" />
                </StackLayout>
            </StackLayout>

            <ListView ItemsSource="{Binding WorkItems}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Start}" HorizontalOptions="FillAndExpand" />
                                <Label Text="{Binding End}" HorizontalOptions="FillAndExpand" />
                                <Label Text="{Binding Total}" HorizontalOptions="FillAndExpand" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackLayout BackgroundColor="LightBlue">
                <Label Text="{Binding TodaysEarnings, StringFormat='Earnings Today: {0}'}"
                       HorizontalOptions="Center" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
